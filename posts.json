<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>BTCBRAVE BLOG – JSON Builder</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    :root {
      --bg: #05060a;
      --card: #111318;
      --accent: #d4af37;
      --accent-soft: #ffdd70;
      --text: #f5f5f5;
      --muted: #a0a4b8;
      --border: #252837;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Arial, sans-serif;
      background: radial-gradient(circle at top, #151827 0, #05060a 40%, #020308 100%);
      color: var(--text);
    }

    header {
      padding: 12px 24px;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: rgba(5, 6, 10, 0.96);
    }

    header h1 {
      margin: 0;
      font-size: 18px;
      letter-spacing: 0.09em;
      text-transform: uppercase;
      color: var(--accent-soft);
    }

    .tag {
      font-size: 11px;
      padding: 3px 10px;
      border-radius: 999px;
      border: 1px solid var(--accent-soft);
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--accent-soft);
    }

    main {
      max-width: 1400px;
      margin: 20px auto;
      padding: 0 16px 24px;
      display: grid;
      grid-template-columns: minmax(0, 1.3fr) minmax(0, 1fr);
      gap: 18px;
    }

    @media (max-width: 900px) {
      main {
        grid-template-columns: 1fr;
      }
    }

    .card {
      background: var(--card);
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,0.08);
      box-shadow: 0 18px 40px rgba(0,0,0,0.6);
      padding: 18px 18px 20px;
    }

    .card h2 {
      margin: 0 0 10px;
      font-size: 18px;
    }

    .field-group {
      margin-bottom: 12px;
    }

    label {
      font-size: 12px;
      display: block;
      margin-bottom: 4px;
      color: var(--muted);
    }

    input[type="text"],
    input[type="url"],
    textarea {
      width: 100%;
      background: #05060a;
      border-radius: 8px;
      border: 1px solid var(--border);
      padding: 8px 10px;
      font-size: 13px;
      color: var(--text);
      font-family: inherit;
    }

    textarea {
      min-height: 90px;
      resize: vertical;
    }

    input[type="text"]:focus,
    input[type="url"]:focus,
    textarea:focus {
      outline: none;
      border-color: var(--accent-soft);
    }

    .hint {
      font-size: 11px;
      color: var(--muted);
      margin-top: 3px;
    }

    .row {
      display: flex;
      gap: 10px;
    }

    .row > div {
      flex: 1;
    }

    .btn-row {
      display: flex;
      gap: 10px;
      margin-top: 10px;
      flex-wrap: wrap;
    }

    button {
      border-radius: 999px;
      border: none;
      padding: 8px 16px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
    }

    .btn-main {
      background: linear-gradient(90deg,#3b82f6,#8b5cf6,#ec4899,#f97316);
      color: #fff;
    }

    .btn-secondary {
      background: transparent;
      color: var(--accent-soft);
      border: 1px solid rgba(255,255,255,0.3);
    }

    .btn-main:hover {
      filter: brightness(1.05);
    }

    .btn-secondary:hover {
      background: rgba(255,255,255,0.05);
    }

    .json-output,
    .preview {
      width: 100%;
      min-height: 260px;
      background: #05060a;
      border-radius: 10px;
      border: 1px solid var(--border);
      padding: 10px;
      font-family: "JetBrains Mono", Menlo, Consolas, monospace;
      font-size: 12px;
      color: #e5e5e5;
      resize: vertical;
      white-space: pre;
      overflow: auto;
    }

    .preview-card {
      background: radial-gradient(circle at top left, #202538 0, #111318 45%, #05060a 100%);
      border-radius: 14px;
      overflow: hidden;
      border: 1px solid rgba(255,255,255,0.15);
      margin-top: 10px;
    }

    .preview-img {
      height: 160px;
      width: 100%;
      object-fit: cover;
      background:#05060a;
    }

    .preview-body {
      padding: 12px;
      font-size: 13px;
    }

    .preview-title {
      font-weight: 700;
      margin-bottom: 6px;
    }

    .preview-meta {
      font-size: 11px;
      color: var(--muted);
      margin-top: 6px;
    }

    .status {
      margin-top: 8px;
      font-size: 12px;
      color: var(--muted);
    }

    .status strong {
      color: var(--accent-soft);
    }
  </style>
</head>
<body>
  <header>
    <h1>BTCBRAVE JSON BUILDER</h1>
    <span class="tag">BLOG • posts.json</span>
  </header>

  <main>
    <!-- LADO ESQUERDO: FORM -->
    <section class="card">
      <h2>Modelo de Post – BLOG</h2>

      <div class="field-group">
        <label for="titulo">Title *</label>
        <input type="text" id="titulo" placeholder="Título do post">
      </div>

      <div class="field-group">
        <label for="descricao">Description *</label>
        <textarea id="descricao" placeholder="Resumo do post (aparece na box)"></textarea>
      </div>

      <div class="field-group">
        <label for="link">Link *</label>
        <input type="url" id="link" placeholder="https://blog.btcbrave.store/algum-post.html">
        <div class="hint">Sempre use o link final do post no <strong>blog.btcbrave.store</strong>.</div>
      </div>

      <div class="field-group">
        <label for="thumb">Thumbnail (URL da imagem) *</label>
        <input type="url" id="thumb" placeholder="https://blog.btcbrave.store/imgs/alguma-imagem.jpg">
      </div>

      <div class="row">
        <div class="field-group">
          <label for="pubdate">pubDate (ISO) *</label>
          <input type="text" id="pubdate" placeholder="2025-11-23T19:36:09.306Z">
          <div class="hint">Clique em "Agora" para preencher automaticamente.</div>
        </div>
        <div class="field-group">
          <label for="fonte">Source (opcional, só visual)</label>
          <input type="text" id="fonte" placeholder="blog">
        </div>
      </div>

      <div class="field-group">
        <label for="fulltext">fullText (HTML opcional – popup interno)</label>
        <textarea id="fulltext" placeholder="Se não preencher, o link abre o blog externo."></textarea>
      </div>

      <div class="btn-row">
        <button type="button" class="btn-secondary" id="btnAgora">Agora (preencher pubDate)</button>
        <button type="button" class="btn-main" id="btnGerar">Gerar JSON (post único)</button>
        <button type="button" class="btn-secondary" id="btnBaixarPosts">Baixar posts.json atualizado</button>
      </div>

      <div class="status" id="statusMsg">
        Preencha os campos e clique em <strong>Gerar JSON</strong>.
      </div>
    </section>

    <!-- LADO DIREITO: JSON + PREVIEW -->
    <section class="card">
      <h2>JSON Gerado (somente BLOG)</h2>
      <textarea class="json-output" id="jsonOutput" readonly>
O JSON do seu post aparecerá aqui...
      </textarea>

      <div class="preview">
        <div class="preview-card" id="previewCard">
          <div id="previewImgHolder">
            <!-- imagem -->
          </div>
          <div class="preview-body">
            <div class="preview-title" id="previewTitle">Título de exemplo do blog</div>
            <div id="previewDesc">
              Descrição curta do post de blog, apenas para visualização rápida.
            </div>
            <div class="preview-meta" id="previewMeta">
              23/11/2025 • BTCBRAVE Blog
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    const BLOG_POSTS_URL = "https://blog.btcbrave.store/posts.json";

    const tituloEl   = document.getElementById('titulo');
    const descEl     = document.getElementById('descricao');
    const linkEl     = document.getElementById('link');
    const thumbEl    = document.getElementById('thumb');
    const pubdateEl  = document.getElementById('pubdate');
    const fonteEl    = document.getElementById('fonte');
    const fullTextEl = document.getElementById('fulltext');

    const btnAgora   = document.getElementById('btnAgora');
    const btnGerar   = document.getElementById('btnGerar');
    const btnBaixar  = document.getElementById('btnBaixarPosts');

    const jsonOutput = document.getElementById('jsonOutput');
    const statusMsg  = document.getElementById('statusMsg');

    const previewTitle = document.getElementById('previewTitle');
    const previewDesc  = document.getElementById('previewDesc');
    const previewMeta  = document.getElementById('previewMeta');
    const previewImgHolder = document.getElementById('previewImgHolder');

    let ultimoPost = null; // guarda o último JSON gerado

    btnAgora.addEventListener('click', () => {
      pubdateEl.value = new Date().toISOString();
      statusMsg.innerHTML = 'pubDate preenchido com <strong>agora</strong>.';
    });

    function montarPostObjeto() {
      const title       = tituloEl.value.trim();
      const description = descEl.value.trim();
      const link        = linkEl.value.trim();
      const thumbnail   = thumbEl.value.trim();
      const pubDate     = pubdateEl.value.trim();
      const source      = (fonteEl.value.trim() || 'blog');
      const fullText    = fullTextEl.value.trim();

      if (!title || !description || !link || !thumbnail || !pubDate) {
        alert("Preencha título, descrição, link, thumbnail e pubDate.");
        return null;
      }

      const obj = {
        title,
        description,
        link,
        thumbnail,
        pubDate,
        source,
        category: "blog"
      };

      if (fullText) {
        obj.fullText = fullText;
      }

      return obj;
    }

    function atualizarPreview(post) {
      previewTitle.textContent = post.title;
      previewDesc.textContent  = post.description;
      const d = new Date(post.pubDate);
      const dataFmt = isNaN(d.getTime()) ? post.pubDate : d.toLocaleDateString();
      const fonte = post.source || "blog";
      previewMeta.textContent = dataFmt + " • " + fonte;

      previewImgHolder.innerHTML = "";
      const img = document.createElement("img");
      img.className = "preview-img";
      img.src = post.thumbnail;
      img.alt = post.title;
      previewImgHolder.appendChild(img);
    }

    btnGerar.addEventListener('click', () => {
      const post = montarPostObjeto();
      if (!post) return;

      ultimoPost = post;

      jsonOutput.value = JSON.stringify(post, null, 2);
      atualizarPreview(post);
      statusMsg.innerHTML = 'JSON do post de <strong>blog</strong> gerado. Agora você pode copiar ou baixar o <code>posts.json</code> atualizado.';
    });

    btnBaixar.addEventListener('click', async () => {
      if (!ultimoPost) {
        alert("Primeiro gere o JSON do post (botão 'Gerar JSON').");
        return;
      }

      statusMsg.innerHTML = 'Buscando <code>posts.json</code> atual do blog...';

      try {
        const resp = await fetch(BLOG_POSTS_URL + "?_=" + Date.now());
        let lista = [];

        if (resp.ok) {
          lista = await resp.json();
          if (!Array.isArray(lista)) lista = [];
        }

        // coloca o novo post no topo
        lista.unshift(ultimoPost);

        const blob = new Blob([JSON.stringify(lista, null, 2)], {
          type: "application/json"
        });

        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "posts.json";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);

        statusMsg.innerHTML = 'Novo <code>posts.json</code> baixado. Agora é só subir esse arquivo para o <strong>GitHub</strong> do blog.';

      } catch (e) {
        console.error(e);
        alert("Não consegui baixar o posts.json atual. Você ainda pode copiar o JSON único e colar manualmente.");
        statusMsg.innerHTML = 'Erro ao buscar <code>posts.json</code>. Ver console.';
      }
    });
  </script>
</body>
</html>
